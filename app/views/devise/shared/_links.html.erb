<div class="container">
  <div class="row text-center justify-content-center">
      <%- if controller_name != 'sessions' %>
        <%= link_to "Ingresar", new_session_path(resource_name), class: "btn btn-info d-block" %><br />
      <% end %>
</div>
</div>

<div class="container">
  <div class="row text-center justify-content-center">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Registrarse", new_registration_path(resource_name), class: "btn btn-info d-block" %><br />
      <% end %>
</div>
</div>

<div class="container">
  <div class="row text-center justify-content-center">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Olvidaste tu contraseÃ±a?", new_password_path(resource_name), class: "text-danger d-block" %><br />
      <% end %>
</div>
</div>

<div class="container">
  <div class="row text-center justify-content-center">
      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "No recibiste tu correo de confirmacion?", new_confirmation_path(resource_name), class: "alert alert-danger" %><br />
      <% end %>
</div>
</div>

<div class="container">
  <div class="row text-center justify-content-center">
      <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <%= link_to "No recibiste tu pasos de desbloqueo?", new_unlock_path(resource_name), class: "alert alert-danger" %><br />
      <% end %>
</div>
</div>

<div class="container">
  <div class="row text-center justify-content-center">
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "Inciar Sesion como #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "alert alert-danger" %><br />
        <% end %>
      <% end %>
  </div>
</div>
