<%= form_with(model: pin, local: true) do |form| %>
  
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-6">
      <% if pin.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <p><%= pluralize(pin.errors.count, "error") %> por esto no se pudo generar tu pin:</p>

            <% pin.errors.full_messages.each do |message| %>
              <p><%= message %></p>
            <% end %>
        </div>
      <% end %>
      </div>
    </div>
  </div>

  <div class="container">
   <div class="row justify-content-center">
    <div class="col-6">
        <div class="form-group">
          <%= form.label :name, class:'pb-0 mb-0' %>
          <%= form.text_field :name, class:'form-control' %>
        </div>

        <div class="custom-file form-group">
          <%= form.label :images, class: "custom-file-label" %>
          <%= form.file_field :images, multiple: true, class: "custom-file-input" %>
        </div>

        <div class="form-group">
          <%= form.label :description, class:'pb-0 mb-0'  %>
          <%= form.text_area :description, class:'form-control' %>
        </div>

        <div class="text-center">
          <%= form.submit "Guardar", class:'btn btn-danger px-4' %>
        </div>
    </div> 
   </div>
  </div>
<% end %>